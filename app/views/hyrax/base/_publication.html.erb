<div class="row detail_page_item_block">
      <div class="col-sm-3">
        <b>Publication</b>
      </div>
      <div class="col-sm-9">
        <%
        authors = @presenter.solr_document._source["publication_author_all_tesim"] unless @presenter.solr_document._source["publication_author_all_tesim"].nil?
        authors = @presenter.solr_document._source["publication_author_tesim"] if authors.nil?
        %>
        <%=sanitize(Apa.get_reference_html(authors,
                                 @presenter.solr_document._source["publication_date_tesim"],
                                 @presenter.solr_document._source["publication_title_tesim"],
                                 @presenter.solr_document._source["publication_journal_name_tesim"],
                                 @presenter.solr_document._source["publication_volume_tesim"],
                                 @presenter.solr_document._source["publication_issue_tesim"],
                                 @presenter.solr_document._source["publication_pages_from_tesim"][0],
                                 @presenter.solr_document._source["publication_pages_to_tesim"][0]))%>
      </div>
</div>
