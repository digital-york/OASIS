<% provide :page_title, @presenter.page_title %>

<%= render 'shared/citations' %>

<div class="panel-heading">
  <%= render 'title_of_summary', presenter: @presenter %>
</div>

<% doc_presenter = index_presenter(@presenter.solr_document) %>

<!-- Writer of Summary -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'summary_writer'} %>
<!-- Title of summary -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'title_of_summary'} %>
<!-- Publication Identifier (DOI) -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_identifier'} %>
