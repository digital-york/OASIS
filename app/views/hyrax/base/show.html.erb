<%= render :partial => 'generic_field', :locals => {:field_name => 'licence'} %>
<!-- Email -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'emails'} %>
<!-- Notification of download -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'notification_of_download'} %>
