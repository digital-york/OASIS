<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_author'} %>
<!-- Title of publication -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_title'} %>
<!-- Year of Publication -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_date'} %>
<!-- Journal -->
<%= render :partial => 'generic_field_with_authority', :locals => {:field_name => 'publication_journal_name', :authority_file_name => 'journals'} %>
<!-- Volume -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_volume'} %>
<!-- Issue -->
<%= render :partial => 'generic_field', :locals => {:field_name => 'publication_issue'} %>
<!-- Pages -->
<%= render :partial => 'publication_pages' %>
<!-- Research Area -->
<%= render :partial => 'generic_field_with_authority', :locals => {:field_name => 'summary_general_research_area', :authority_file_name => 'research_areas'} %>
