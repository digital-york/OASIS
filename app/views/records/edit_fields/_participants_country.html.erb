<%= f.input :participants_country, as: :select,
            collection: GenericLocalAuthorityService.select_all_options('country_code'),
            value_method: lambda {|v| v.last.to_s },
            input_html: { multiple: true  }
%>

<div id="participants_country_other_div" style="display: none; position: relative; top: -20px;">
  <%= f.input :participants_country_other, as: :string,
              input_html: { class: 'form-control' }
  %>
</div>